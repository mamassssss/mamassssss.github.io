    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #1c1c1c;
            font-family: 'Poppins', sans-serif;
            color: #f5f5f5;
            padding: 20px;
        }
        h1 {
            text-align: center;
            margin-bottom: 20px;
        }
        table {
            margin: 0 auto;
            border-collapse: collapse;
        }
        th, td {
            border: 2px solid #f39c12;
            padding: 15px;
            text-align: center;
            background-color: #2c2c2c;
        }
        .result {
            margin-top: 20px;
            text-align: center;
        }
        .btn-submit {
            margin-top: 20px;
        }
    </style>
</head>
<body>

<h1>Permainan Tabel Perkalian</h1>

<table>
    <thead>
        <tr>
            <th>x</th>
            <th>1</th>
            <th>2</th>
            <th>3</th>
            <th>4</th>
            <th>5</th>
            <th>6</th>
            <th>7</th>
            <th>8</th>
            <th>9</th>
            <th>10</th>
        </tr>
    </thead>
    <tbody>
        <!-- Loop untuk menghasilkan baris tabel -->
        <script>
            for (let i = 1; i <= 10; i++) {
                document.write('<tr>');
                document.write('<th>' + i + '</th>');
                for (let j = 1; j <= 10; j++) {
                    document.write('<td id="cell' + i + j + '">' + (i * j) + '</td>');
                }
                document.write('</tr>');
            }
        </script>
    </tbody>
</table>

<div class="result">
    <button class="btn btn-primary btn-submit" onclick="showAnswers()">Tampilkan Jawaban</button>
</div>

<script>
    function showAnswers() {
        for (let i = 1; i <= 10; i++) {
            for (let j = 1; j <= 10; j++) {
                const cell = document.getElementById(`cell${i}${j}`);
                cell.style.color = "#ffb300"; // Mengubah warna teks
            }
        }
    }
</script>

</body>
</html>
